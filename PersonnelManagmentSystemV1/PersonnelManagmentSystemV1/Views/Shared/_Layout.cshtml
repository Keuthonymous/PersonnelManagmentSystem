@Html.AntiForgeryToken()
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Personnel Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if (ViewContext.HttpContext.User.IsInRole("Searcher"))
                    {
                        <li>@Html.ActionLink("Job Openings", "Index", "Searcher")</li>
                        <li>@Html.ActionLink("Messages", "Index", "Message")</li>
                    }
                    
                    @if (ViewContext.HttpContext.User.IsInRole("Worker"))
                    {
                        <li>@Html.ActionLink("News & Info", "Index", "Information")</li>
                        <li>@Html.ActionLink("Job Openings", "Index", "JobOpenings")</li>
                        <li>@Html.ActionLink("Messages", "Index", "Message")</li>
                        <li>@Html.ActionLink("Files", "Index", "Files")</li>
                        <li>@Html.ActionLink("Calender", "Events", "Calender")</li>
                    }
                    
                    @if (ViewContext.HttpContext.User.IsInRole("Boss"))
                    {
                        <li>@Html.ActionLink("Job Openings", "Index", "JobOpenings")</li>
                        <li>@Html.ActionLink("Departments", "Index", "Boss")</li>
                        <li>@Html.ActionLink("News & Info", "Index", "Information")</li>
                        <li>@Html.ActionLink("Messages", "Index", "Message")</li>
                        <li>@Html.ActionLink("Calender", "Events", "Calender")</li>
                        <li>@Html.ActionLink("Files", "Index", "Files")</li>
                    }
                    
                    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Manage", "Index", "Admin")</li>
                    }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Personnel Management Systems AB.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
