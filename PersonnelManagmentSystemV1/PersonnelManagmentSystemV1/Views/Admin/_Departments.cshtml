@model IEnumerable<PersonnelManagmentSystemV1.Models.Department>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Manager.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Manager.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditDepartment", new { id=item.ID }) |
            @Html.ActionLink("Details", "DetailsDepartment", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteDepartment", new { id=item.ID })
        </td>
    </tr>
}

</table>
