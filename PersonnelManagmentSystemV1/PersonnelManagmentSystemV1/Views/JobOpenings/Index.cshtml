@model IEnumerable<PersonnelManagmentSystemV1.Models.JobOpening>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Boss"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                <div class="btn">@Html.ActionLink("Apply", "Create", "Message", new { jobOpeningID = item.ID }, new { })</div> 
                <div class="btn">@Html.ActionLink("Edit", "Edit", new { id = item.ID })</div>
                <div class="btn">@Html.ActionLink("Details", "Details", new { id = item.ID })</div>
                <div class="btn">@Html.ActionLink("Delete", "Delete", new { id = item.ID })</div>
            </td>
        </tr>
    }

</table>
